<div class="row" style="outline-width: 4px; padding">
    <div class="col-md-4 mx-auto">
      <div class="card text-center" style="border-color: white;">
        <div class="card-body">
          <h1 style="color:dodgerblue;" class="mx-auto">Registrar venta</h1>
        
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/ventas/add" method="POST">
                        <div class="form-group">
                            <input type="text"  class="form-control" name="producto" placeholder="Nombre del producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="cliente" placeholder="Nombre del cliente">
                        </div>
                        <div class="form-group">
                            <input type="number" name="orden_c" class="form-control" placeholder="Orden de compra">
                        </div>
                         <div class="form-group">
                            <input type="number" name="cantidad" class="form-control" placeholder="Cantidad">
                        </div>
                        <div class="form-group">
                            Fecha de orden de compra<input type="date" class="form-control" name="date_orden_c">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="folio_f" placeholder="Folio de factura">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="factura" placeholder="Factura">
                        </div>
                        <div class="form-group">
                            Fecha de factura<input type="date" class="form-control" name="date_fac">
                        </div>
                        <div class="form-group">
                            <input type="number" name="costo" class="form-control" placeholder="Costo $">
                        </div>
                        
                        <div class="form-group">
                            <input type="number" name="precio" class="form-control" placeholder="Precio $">
                        </div>
                
                        <div class="form-group">
                            <input type="number" name="dias_t" class="form-control" placeholder="Dias transcurridos">
                        </div>
                        <div class="form-group">
                            <input type="text" name="status" class="form-control" placeholder="Status de pago">
                        </div>
                        <div class="form-group">
                            <input type="text" name="complemento" class="form-control" placeholder="Complemento pago">
                        </div>
        
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>